@model House<h2>@Model.Address</h2><p>@Model.City</p><p>@Model.State</p><h3>$@Model.Price</h3><p>@Model.Description</p><form method="post">    <input value="@Model.Address" type="hidden" maxlength="50" name="Address" required />    <input value="@Model.City" type="hidden" maxlength="25" />    <input value="@Model.State" type="hidden" />    <input value="@Model.Price" type="hidden" min="0" />    <input value="@Model.Description" type="hidden" maxlength="100"  />    <input  type="submit" value="I am sure I wish to Delete the Listing for @Model.Address" /></form>